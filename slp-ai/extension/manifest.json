{
  "manifest_version": 3,
  "name": "SLP AI Assistant",
  "version": "1.0",
  "description": "AI assistance for speech-language pathologists",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://firebaseio.com https://www.googleapis.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://api.openai.com https://vision.googleapis.com;"
  },
  "permissions": ["storage", "activeTab", "scripting", "sidePanel", "tabs"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://*.zandahealth.com/*"
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.zandahealth.com/*"],
      "js": ["services/ai-service.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["mobile/assessment.html", "mobile/assessment.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
